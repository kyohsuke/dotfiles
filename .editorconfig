root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 128

[*.go]
indent_style = tab
indent_size = 4
end_of_line = lf

[*_test.go]
max_line_length = off

[*.{md,markdown}]
indent_style = space
indent_size = 2
max_line_length = off

[*.{hql,q}]
indent_style = space

[*.{haml,rhtml,rb,yml}]
indent_style = space
indent_size = 2
