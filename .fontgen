#!/usr/bin/env bash
OSAKA_MONO_PATH="$(find /System/Library/Assets* -name OsakaMono.ttf)"
OSAKA_MONO_DIR="$(dirname "$OSAKA_MONO_PATH")"

cp "$OSAKA_MONO_PATH" "$HOME/OsakaMonoBefore.ttf"
mkdir -p "$HOME/temp_font_out"
docker run -v "$HOME":/"/in" -v "$HOME/temp_font_out":/out nerdfonts/patcher

mkdir -p "$HOME/Library/Fonts"
cp "$HOME/temp_font_out/Osaka-Mono Nerd Font.ttf" "$HOME/Library/Fonts"

rm -rf "$HOME/temp_font_out"
rm -f "$HOME/OsakaMonoBefore.ttf"
