# vim: filetype=config

macos-dock-drop-behavior = new-window
clipboard-paste-protection = false
bell-features=border

# fonts
font-family = Cica
font-size = 14
font-thicken = true
bold-is-bright = true

# disable ligatures,
font-feature = -calt
font-feature = -liga
font-feature = -dlig

# cursor
cursor-color = C0C0C0
cursor-style = block
cursor-style-blink = false
selection-background = C0C0C0
mouse-hide-while-typing = true

# window
background-opacity = 0.85
theme = "Pro"
custom-shader-animation = true
window-theme = system
window-width = 200
window-height = 60
macos-titlebar-style = native
working-directory = home
window-inherit-working-directory = true

# Shell Integration
shell-integration-features = no-cursor,sudo,title

# Quick Terminal
quick-terminal-position = "top"
quick-terminal-screen = "main"
quick-terminal-autohide = true
quick-terminal-animation-duration = 0.1
quick-terminal-size = 70%,50%

# keybinds
keybind = home=scroll_to_top
keybind = end=scroll_to_bottom
keybind = global:ctrl+space=toggle_quick_terminal
